<div class="background-img" style="  background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4) 50%), url('https://images.unsplash.com/photo-1465788786008-f75a725b34e9?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=e088ec671a9d481a27a8b2c8b7c07d82&auto=format&fit=crop&w=1050&q=80');">

  <div class="form">

    <div class="form-title">
      <h1>Create a flight</h1>
    </div>

    <div class="form-table">
      <%= simple_form_for [@rocket, @flight] do |f| %>
        <%= f.input :destination, placeholder: 'Enter your destination' %>
        <%= f.input :departure, placeholder: 'Enter your departure location' %>
        <%= f.input :description, placeholder: 'Enter some description for your flight'  %>
        <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"}, placeholder: 'Select a date' %>
        <%= f.button :submit, class: 'btn-form' %>
      <% end %>
    </div>

  </div>
</div>
