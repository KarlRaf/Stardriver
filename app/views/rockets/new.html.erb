<div class="background-img" style="  background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4) 50%), url('https://images.unsplash.com/photo-1517976384346-3136801d605d?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=6e6ee2cf355b57ff64f8183a16bdd6b7&auto=format&fit=crop&w=1000&q=80');">

  <div class="form">

    <div class="form-title">
      <h1>Create a big fu**ing rocket</h1>
    </div>

    <div class="form-table" data-index-number="12314">
      <%= simple_form_for [@rocket] do |f| %>
        <%= f.input :model, :collection => Rocket::ROCKETS, include_blank: false %>
        <%= f.input :name, placeholder: 'Enter a name for your rocket' %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: 'btn-form sweet-alert' %>
      <% end %>
    </div>
  </div>
</div>
