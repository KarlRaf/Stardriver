
 <div class="medium-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4) 50%), url('https://source.unsplash.com/featured/?outerspace');">
  <div class="banner-content">
    <h1>Your profile</h1>
  </div>
</div>
<div class="container">
  <div class="profile text-center">
    <div class="main">
      <div class="main-content">
        <%= cl_image_tag current_user.photo, class: "img-circle" %>
          <h2> <strong><%= current_user.name %></strong></h2>
          <h3><strong><%= current_user.email %></strong></h3>
      </div>
    </div>
  <div class="stat">
    <h3><strong>Rockets:</strong></h3>
      <% unless current_user.rockets %>
        You don't have a rocket yet. <%= link_to "Add one", new_rocket_path %>
      <% end %>
    </p>
      <ul>
        <% current_user.rockets.each do |rocket| %>
          <li>Model : <%= rocket.model %>, with <%= rocket.capacity %> sits.
            <% if policy(rocket).destroy? %>
              <%= link_to "Delete", rocket_path(rocket)  , method: :delete, data: {confirm: "are you sure you want to delete this rocket? This will destroy all the flights you planned with it aswell"} %>
            <% end %>
          </p>
            <% if policy(rocket).update? %>
              <%= link_to "Modify", edit_rocket_path(rocket) %>
            <% end %>
              </li>
        <% end %>
      </ul>
      <a class="btn btn-success" href="/rockets/new">Add a rocket</a>
  </div>
  <div class="description">
            <div class="description-content">
              <h3><strong>More about Me</strong></h3>
              <p class="text-justify">
               <%= current_user.bio %>
              </p>
              <a class="btn btn-success" href="/users/edit">Edit my profile</a>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
